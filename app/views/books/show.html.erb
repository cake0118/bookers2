<div>
  <h2>User</h2>
  <%= image_tag @user.get_image(80,80) %>
  <p>name</p>
  <p><%= @user.name %></p>
  <p>introduction</p>
  <p><%= @user.introduction %></p>
  <p>
    <%= link_to user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </p>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit "Create Book" %>
  <% end %>
</div>

<div>
  <h2>Book detail</h2>
  <p>
    <% link_to user_path %>
    <%= image_tag @book_a.user.get_image(80,80) %>
    <%= @book_a.title %>
  </p>
  <p><%= link_to @book_a.title, book_path(@book_a.id) %></p>
  <p><%= @book_a.body %>
  <p><%= link_to "Edit", edit_book_path(@book_a.id) %></p>
  <p><%= link_to "Destroy" %></p>
</div>
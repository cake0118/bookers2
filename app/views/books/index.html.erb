<%= render partial: 'infonew', locals: { user: @user, book: @book } %>

<div>
  <h2>Books</h2>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <tb><%= image_tag book.user.get_image(80,80) %></tb>
      <tb><%= link_to book.title, book_path(book.id) %></tb>
      <tb><%= book.body %></tb>
    </tr>
    <% end %>
  </table>
</div>
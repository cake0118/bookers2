<div>
  <h2>User</h2>
  <% if @user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image.tag "no_image", size: "100x100" %>
  <% end %>
  <p>name</p>
  <p><%= @user.name %></p>
  <p>introduction</p>
  <p><%= @user.introduction %></p>
  <p></p>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit "Create Book" %>
  <% end %>
</div>
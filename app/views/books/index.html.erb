<div>
  <h2>User</h2>
  <%= image_tag @user.get_image(80,80) %>
  <p>name</p>
  <p><%= @user.name %></p>
  <p>introduction</p>
  <p><%= @user.introduction %></p>
  <p>
    <%= link_to user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </p>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit "Create Book" %>
  <% end %>
</div>

<div>
  <h2>Books</h2>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <tb><%= image_tag book.user.get_image(80,80) %></tb>
      <tb><%= link_to book.title, book_path(book.id) %></tb>
      <tb><%= book.body %></tb>
    </tr>
    <% end %>
  </table>
</div>
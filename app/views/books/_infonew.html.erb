<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_image(80,80) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(user.id), class: "btn btn-sm btn-block btn-outline-secondary" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>

  <h2>New book</h2>
  <%= form_with model: book do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit "Create Book" %>
  <% end %>
</div>
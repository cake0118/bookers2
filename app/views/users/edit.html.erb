<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="mb-2">
        <h2>User info</h2>
      </div>
      <div>
      <% if @user.errors.any? %>
        <h3>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
      <%= form_with model: @user, class: "w-100" do |f| %>
      <div class="mb-3">
        <h6>Name</h6>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <h6>Image</h6>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="mb-3">
        <h6>Introduction</h6>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </end>
  </end>
</end>